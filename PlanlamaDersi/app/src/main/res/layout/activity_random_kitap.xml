<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_kar"
    tools:context=".RandomKitap">

    <TextView
        android:layout_width="394dp"
        android:layout_height="363dp"
        android:gravity="center"
        android:text="Kitap Ruhun Gıdasıdır Öyleyse bir kitabı bitirdiğin zaman yeni bir kitaba geç. Bugunkü kitabını seçmek için SEÇ butonuna tıkla"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <Button

        android:id="@+id/btn_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_tasarim4"
        android:text="seç"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_random"
        android:layout_width="404dp"
        android:layout_height="264dp"
        android:background="@drawable/soru2"
        android:text="  Bugünkü Kitabın"


        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>