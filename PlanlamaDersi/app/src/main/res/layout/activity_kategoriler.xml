<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_kar"

    tools:context=".kategoriler">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:gravity="center"
       android:text="KATEGORİLER"
       android:textColor="#783F3F"
       android:textSize="35dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.055"
       tools:ignore="MissingConstraints" />

   <Button
       android:id="@+id/islam"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_tasarim4"
       android:text="İslam hakkında kitaplar"
       android:textSize="25dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.285"
       tools:ignore="MissingConstraints" />

   <Button
       android:id="@+id/edebiyat"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_tasarim4"
       android:text="Edebiyat kitapları"
       android:textSize="30dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.398"
       tools:ignore="MissingConstraints" />

   <Button
       android:id="@+id/ktp_tarih"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_tasarim4"
       android:text="Tarih Kitapları"
       android:textSize="30dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.53"
       tools:ignore="MissingConstraints" />

   <Button
      android:id="@+id/dunya"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_tasarim4"
       android:text="Dünya Klasikleri"
       android:textSize="30dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.657"
       tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>